        <Grid Grid.Row="1" x:Name="MainInnerContentGrid"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- animate the content of the grid when making it visible -->
            <Grid.ChildrenTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition />
                </TransitionCollection>
            </Grid.ChildrenTransitions>


            <!--
                <Button Name="NextPageButton"
                        Click="NextPageButton_OnClick"
                        RelativePanel.RightOf="ReloadButton"
                        Margin="8,0,0,0">
                    <StackPanel>
                        <FontIcon Glyph="&#xE76C;" FontFamily="{StaticResource FluentIcons}" />
                    </StackPanel>
                </Button> -->


            <ScrollViewer Grid.Row="1"
                          x:Name="MainScroll"
                          HorizontalScrollMode="Disabled"
                          VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

                <Grid Padding="40,64,0,64">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0"
                          Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <RelativePanel
                            Grid.Column="0">
                            <!-- icon of place with text of the place -->
                            <FontIcon x:Name="PlaceIcon"
                                      FontSize="24"
                                      RelativePanel.AlignVerticalCenterWithPanel="True"
                                      FontFamily="{StaticResource FluentIcons}" Glyph="&#xE707;" />

                            <TextBlock x:Name="PlaceText" Text="place"
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       Margin="8,0,0,0"
                                       RelativePanel.RightOf="PlaceIcon" />

                            <TextBlock x:Name="UpdatedOnText" Text="updatedOn"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Opacity="{ThemeResource TextControlBackgroundThemeOpacity}"
                                       Margin="8,0,0,0"
                                       RelativePanel.Below="PlaceText"
                                       RelativePanel.AlignLeftWith="PlaceText" />


                        </RelativePanel>

                        <RelativePanel Grid.Column="1">
                            <Button Name="ReloadButton"
                                    Click="ReloadButton_OnClick"
                                    RelativePanel.AlignVerticalCenterWithPanel="True"
                                    Margin="16,0,0,0">
                                <StackPanel>
                                    <FontIcon Width="25" Glyph="&#xE72C;" FontFamily="{StaticResource FluentIcons}" />
                                </StackPanel>
                            </Button>
                        </RelativePanel>

                    </Grid>


                    <RelativePanel
                        Grid.Row="1">

                        <Image x:Name="MainIcon"
                               Width="75"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               Stretch="Uniform">
                            <Image.Source>
                                <SvgImageSource />
                            </Image.Source>
                        </Image>

                        <TextBlock x:Name="CurrentTempText" Text="temperature"

                                   Style="{StaticResource DisplayTextBlockStyle}"
                                   Margin="8,0,0,0"

                                   RelativePanel.RightOf="MainIcon" />

                        <TextBlock x:Name="MainPhraseText" Text="phrase"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="16,0,0,0"
                                   RelativePanel.Above="FeelsLikeText"
                                   RelativePanel.AlignLeftWith="FeelsLikeText" />


                        <TextBlock x:Name="FeelsLikeText" Text="feelslike"

                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   Margin="16,0,0,16"
                                   Opacity="{ThemeResource TextControlBackgroundRestOpacity}"
                                   RelativePanel.AlignBottomWithPanel="True"
                                   RelativePanel.RightOf="CurrentTempText" />
                    </RelativePanel>


                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="0,16,0,0">

                        <controls:DetailChipControl
                            x:Name="WindChipControl"
                            x:Uid="WindChipControl">
                        </controls:DetailChipControl>


                        <!-- pressure panel -->
                        <controls:DetailChipControl
                            x:Name="PressureChipControl"
                            x:Uid="PressureChipControl">
                        </controls:DetailChipControl>


                        <!-- humidity panel -->
                        <controls:DetailChipControl
                            x:Name="HumidityChipControl"
                            x:Uid="HumidityChipControl">
                        </controls:DetailChipControl>


                        <!-- visibility panel -->
                        <controls:DetailChipControl
                            x:Name="VisibilityChipControl"
                            x:Uid="VisibilityChipControl">
                        </controls:DetailChipControl>


                        <!-- dew point panel -->
                        <controls:DetailChipControl
                            x:Name="DewPointChipControl"
                            x:Uid="DewPointChipControl">
                        </controls:DetailChipControl>


                        <!-- pollen panel -->
                        <!--<controls:DetailChipControl
                            x:Name="PollenPanel"
                            Title="Pollen"
                            >
                        </controls:DetailChipControl>-->


                        <!-- uv index panel -->
                        <controls:DetailChipControl
                            x:Name="UVIndexChipControl"
                            x:Uid="UVIndexChipControl">
                        </controls:DetailChipControl>


                    </StackPanel>

                    <Grid Grid.Row="3"
                          Margin="0,32,0,0">
                        <Grid.RowDefinitions>

                                                   Margin="8,8,0,0"
                                                   FontSize="16"
                                                   Foreground="{ThemeResource MyAcrylicBrushTitleText}"
                                                   RelativePanel.AlignTopWithPanel="True" />

                                        <Rectangle
                                            Fill="{ThemeResource MyAcrylicBrushLine}"
                                            Height="1.2"
                                            RelativePanel.Below="MoonInsightTitle"
                                            RelativePanel.AlignRightWithPanel="True"
                                            RelativePanel.AlignLeftWithPanel="True"

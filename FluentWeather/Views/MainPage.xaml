                                                       Margin="6,2,0,0"
                                                       RelativePanel.AlignLeftWith="MoonsetSubtitle"
                                                       RelativePanel.Below="MoonsetSubtitle" />

                                        </RelativePanel>

                                        <RelativePanel Grid.Row="0"
                                                       Grid.RowSpan="2"
                                                       Grid.Column="1"
                                                       Margin="8">

                                            <Rectangle
                                                x:Name="LunarphaseLine"
                                                Fill="{ThemeResource MyAcrylicBrushLine}"

                                      VerticalScrollBarVisibility="Disabled"
                                      HorizontalScrollBarVisibility="Hidden">

                            <muxc:ItemsRepeater
                                x:Name="RepeaterDays">

                                <muxc:ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="adapters:DayButtonAdapter">
                                        <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                DataContext="{x:Bind}"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Width="135"
                                                Height="70"
                                                Click="DayButtonClick">
                                            <Button.Content>
                                                <RelativePanel HorizontalAlignment="Stretch"
                                                               VerticalAlignment="Stretch">

                                                    <Image x:Name="mainIcon"
                                                           Width="28"
                                                           RelativePanel.AlignVerticalCenterWithPanel="True"
                                                           Stretch="Uniform"
                                                           RelativePanel.AlignTopWithPanel="True"
                                                           RelativePanel.AlignLeftWithPanel="True"
                                                           Source="{x:Bind svgImageIcon}">
                                                    </Image>

                                                    <TextBlock Text="{x:Bind ShortDayName }"
                                                               RelativePanel.AlignTopWithPanel="True"
                                                               RelativePanel.AlignRightWithPanel="True" />

                                                    <TextBlock
                                                        Text="{x:Bind Temperature }"
                                                        RelativePanel.AlignBottomWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True">
                                                    </TextBlock>

                                                    <Image x:Name="precipIcon"
                                                           Width="16"
                                                           RelativePanel.AlignVerticalCenterWithPanel="True"
                                                           Stretch="Uniform"
                                                           RelativePanel.AlignBottomWithPanel="True"
                                                           RelativePanel.LeftOf="precipChanceText"
                                                           Margin="0,0,4,0"
                                                           Source="{x:Bind svgPrecipIcon}">

                                                    </Image>

                                                    <TextBlock
                                                        x:Name="precipChanceText"
                                                        Text="{x:Bind PrecipitationChance}"
                                                        RelativePanel.AlignBottomWithPanel="True"
                                                        RelativePanel.AlignRightWithPanel="True">
                                                    </TextBlock>
                                                </RelativePanel>
                                            </Button.Content>

                                        </Button>
                                    </DataTemplate>
                                </muxc:ItemsRepeater.ItemTemplate>

                                <muxc:ItemsRepeater.Layout>
                                    <muxc:StackLayout Spacing="8"
                                                      Orientation="Horizontal" />
                                </muxc:ItemsRepeater.Layout>
                            </muxc:ItemsRepeater>

                        </ScrollViewer>
                    </Grid>


                    <Grid Grid.Row="4"
                          Margin="0,32,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <RelativePanel Grid.Row="0">
                            <TextBlock
                                x:Name="HourlyTitleText"
                                x:Uid="HourlyTitleText"
                                Style="{StaticResource BodyTextBlockStyle}"
                                FontSize="20"
                                Margin="0,0,0,16" />

                            <!--<labs:Segmented SelectedIndex="0" RelativePanel.RightOf="HourlyTitleText"
                                            Margin="16,0,0,0"
                                            >
                                <labs:SegmentedItem Content="Detailed" />
                                <labs:SegmentedItem Content="Summary (coming soon)" IsEnabled="False" />
                                
                                ~1~ <labs:SegmentedItem Content="Item 3" Icon="{ui:SymbolIcon Symbol=Home}" /> @1@
                            </labs:Segmented>-->

                        </RelativePanel>


                        <Grid
                            Margin="0,0,32,0"
                            Grid.Row="1"
                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                            CornerRadius="8"
                            Padding="12"
                            BorderThickness="2"
                            BorderBrush="{ThemeResource MyAcrylicBrush}"
                            Background="{ThemeResource MyAcrylicBrush}">

                            <ListView x:Name="hourlyListview"

                                      Padding="0,0,0,18"
                                      ScrollViewer.VerticalScrollMode="Disabled"
                                      ScrollViewer.HorizontalScrollMode="Enabled"
                                      ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                      ScrollViewer.IsDeferredScrollingEnabled="False"
                                      SelectionMode="None">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>

                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="Padding" Value="0" />
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="adapters:HourDataAdapter">
                                        <Grid Width="100" Height="200" Margin="0">
                                            <RelativePanel>

                                                <!-- <Rectangle x:Name="Rectangle1"
                                                Fill="#00FFFFFF"
                                                       Height="1"
                                                       RelativePanel.AlignTopWithPanel="True"
                                                       Width="100"
                                                       Margin="0,8,0,0"/> -->

                                                <Image x:Name="wetIcon"
                                                       Margin="0,8,0,0"
                                                       Width="40"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       Stretch="Uniform"
                                                       RelativePanel.AlignTopWithPanel="True"
                                                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                       Source="{x:Bind svgImageIcon}">
                                                </Image>

                                                <TextBlock x:Name="TemperatureText"
                                                           Text="{x:Bind Temperature }"
                                                           RelativePanel.Below="wetIcon"
                                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                           TextAlignment="Center"
                                                           Style="{StaticResource SubtitleTextBlockStyle}"
                                                           FontSize="28">
                                                </TextBlock>

                                                <!-- phrase text -->
                                                <TextBlock Text="{x:Bind Phrase }"
                                                           RelativePanel.Below="TemperatureText"
                                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                           TextAlignment="Center"
                                                           Style="{StaticResource BodyTextBlockStyle}"
                                                           FontSize="12">
                                                </TextBlock>

                                                <!-- precip icon -->
                                                <Image x:Name="precipIcon"
                                                       Width="16"
                                                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                       Stretch="Uniform"
                                                       RelativePanel.Above="Rectangle2"
                                                       RelativePanel.LeftOf="precipChanceText"
                                                       Margin="0,0,4,0"
                                                       Source="{x:Bind svgPrecipIcon}" />

                                                <!-- precip chance text -->
                                                <TextBlock x:Name="precipChanceText"
                                                           Text="{x:Bind PrecipitationChance}"
                                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                           RelativePanel.Above="Rectangle2">
                                                </TextBlock>

                                                <!-- horizontal line -->
                                                <Rectangle x:Name="Rectangle2"
                                                           Fill="#7FFFFFFF"
                                                           Height="1"
                                                           RelativePanel.Above="HourText"
                                                           Width="100"
                                                           Margin="0,8,0,0" />

                                                <TextBlock x:Name="HourText"
                                                           Text="{Binding Hour}"
                                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                           RelativePanel.AlignBottomWithPanel="True" />

                                            </RelativePanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </Grid>


                    </Grid>


                    <Grid Grid.Row="5"
                          Margin="0,32,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <RelativePanel Grid.Row="0">
                            <TextBlock
                                x:Name="WeatherInsightsTitleText"
                                x:Uid="WeatherInsightsTitleText"

                                                <StackPanel Orientation="Horizontal" Spacing="10">
                                                    <Grid Width="18" Height="18">
                                                        <Path
                                                            Data="{StaticResource TranslateIconPath}"
                                                            Stretch="Uniform"
                                                            Fill="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                                                    </Grid>

                                                    <TextBlock x:Uid="TranslateAppText" />
                                                </StackPanel>
                                            </HyperlinkButton>


                                        </StackPanel>


                                    </StackPanel>
                                </ControlTemplate>

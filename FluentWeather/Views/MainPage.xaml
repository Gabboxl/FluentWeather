                                        <TextBlock x:Uid="UnitsSettingsTitle"
                                                   Style="{ThemeResource SubtitleTextBlockStyle}" />

                                        <labs:Segmented
                                            SelectedIndex="{Binding SettingsUnitsSelectedIndex}"
                                            Margin="0,8,0,0"
                                            x:Name="UnitsSegmented"
                                            SelectionChanged="UnitsSegmented_OnSelectionChanged"
                                            d:DataContext="{d:DesignInstance views:MainPage }">
                                            <labs:SegmentedItem x:Uid="MetricUnitsItem" />
                                            <labs:SegmentedItem x:Uid="ImperialUnitsItem" />
                                            <labs:SegmentedItem x:Uid="HybridUnitsItem" />

                                        </labs:Segmented>


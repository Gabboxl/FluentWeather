                                                       RelativePanel.Below="MoonriseSubtitle" />


                                        </RelativePanel>

                                        <RelativePanel Grid.Row="1"
                                                       Grid.Column="0"
                                                       Margin="8">

                                            <Image x:Name="MoonsetIcon"
                                                   Margin="0,8,0,0"
                                                   Width="40"
                                                   Stretch="Uniform"
                                                   RelativePanel.AlignTopWithPanel="True"

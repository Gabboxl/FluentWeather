                                            SelectedIndex="{Binding SettingsTimeFormatSelectedIndex}"
                                            Margin="0,8,0,0"
                                            x:Name="TimeFormatSegmented"
                                            SelectionChanged="TimeFormatSegmented_OnSelectionChanged"
                                            d:DataContext="{d:DesignInstance views:MainPage }">
                                            <labs:SegmentedItem x:Uid="Segmented24hours" />
                                            <labs:SegmentedItem x:Uid="Segmented12hours" />
                                        </labs:Segmented>



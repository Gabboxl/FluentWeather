                                                        <Run x:Uid="DevelopedByRun"></Run>
                                                        <Hyperlink
                                                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                            NavigateUri="https://github.com/Gabboxl">
                                                            Gabboxl
                                                        </Hyperlink>
                                                    </Paragraph>
                                                </RichTextBlock>
                                            </RelativePanel>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
